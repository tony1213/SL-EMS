<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abc_popup_background_mtrl_mult"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_personal_village_name"
            style="@style/tv_list_primary_style"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="名称" />

        <TextView
            android:id="@+id/tv_personal_maintenance_time"
            style="@style/tv_list_primary_style"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="维保时间" />

        <TextView
            android:id="@+id/tv_personal_account"
            style="@style/tv_info_red_style"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:text="维保金额" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_personal_taskno"
            style="@style/tv_info_secondary_style"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="维保单号" />

        <TextView
            android:id="@+id/tv_personal_closingdate"
            style="@style/tv_info_secondary_style"
            android:layout_gravity="bottom"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:text="2016-09-09" />
    </LinearLayout>

</LinearLayout>