<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main" >
	<include 
	    android:id="@+id/task_list_headview"
	    layout="@layout/headview"
	    />
    <LinearLayout
        android:id="@+id/ll_tasklist_title_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_below="@id/task_list_headview"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_tasklist_none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/horizontal_line"
            android:gravity="center"
            android:text="未完成"
            android:textColor="#666666"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/main_line" />

        <TextView
            android:id="@+id/tv_tasklist_donet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已完成"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>
	
    <FrameLayout 
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_tasklist_title_content"
        ></FrameLayout>
    

</RelativeLayout>