<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.overtech.ems.widget.swipemenu.SwipeMenuListView
        android:id="@+id/sl_task_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/page_no_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/load_tv_noresult"
            style="@style/tv_warning_info_null_style"
            android:drawablePadding="28dp"
            android:drawableTop="@drawable/icon_no_result_melt"
            android:gravity="center"
            android:text="@string/common_search_noresult"
            android:textSize="@dimen/text_size_list" />

        <Button
            android:id="@+id/load_btn_retry"
            style="@style/btn_title_white_style"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_button_visiable"
            android:text="重新搜索" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/page_no_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_grab_task"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/load_tv_nowifi"
            style="@style/tv_warning_info_null_style"
            android:drawablePadding="28dp"
            android:drawableTop="@drawable/icon_no_result_network"
            android:gravity="center"
            android:text="@string/common_no_network_msg"
            android:textSize="@dimen/text_size_list" />

        <Button
            android:id="@+id/load_btn_refresh_net"
            style="@style/btn_err_layout_white_style"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginTop="18dp"
            android:text="再试试" />
    </LinearLayout>

</RelativeLayout>