<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_toolbar" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_repair_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="报修时间:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_people_in_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="关人时间:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="到达时间:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="现场情况："
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_current_situcation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:background="@drawable/shape_input_search"
        android:gravity="top" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="维修结果："
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_maintenance_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:background="@drawable/shape_input_search"
        android:gravity="top" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_button_visiable"
        android:text="提交"
        android:textColor="@color/main_white" />

</LinearLayout>