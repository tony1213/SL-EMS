<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
     
    <TextView 
        android:id="@+id/tv_project_name"
        style="@style/tv_list_primary_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="徐家汇景园"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
       
        />
    <TextView 
        android:id="@+id/tv_maintenance_date"
        style="@style/tv_info_secondary_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-10-10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
       
        />
    <TextView 
        android:id="@+id/tv_bonus"
        style="@style/tv_info_red_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥200"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_project_name"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        />
    <TextView 
        android:id="@+id/tv_bonus_date"
        style="@style/tv_info_secondary_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-10-10"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_maintenance_date"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:textColor="@color/main_secondary"
        />

</RelativeLayout>
