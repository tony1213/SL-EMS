<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include_lost_password"
        layout="@layout/headview" />

    <RelativeLayout
        android:id="@+id/rl_lost_password_1 "
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/include_lost_password"
        android:layout_marginTop="20dp"
        android:background="@color/main_white" >

        <EditText
            android:id="@+id/et_lost_password_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_input"
            android:ems="10"
            android:layout_toLeftOf="@+id/btn_get_valicate_code"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11" />

        <Button
            android:id="@+id/btn_get_valicate_code"
            style="@style/tv_hint_white_style"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_button_visiable"
            android:text="点击获取验证码" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/rl_lost_password_2"
        android:layout_centerHorizontal="true"
        android:background="#c1c1c1" />

    <RelativeLayout
        android:id="@+id/rl_lost_password_2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_lost_password_1 "
        android:background="@color/main_white" >

        <com.overtech.ems.views.EditTextWithDelete
            android:id="@+id/et_valicate_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_input"
            android:ems="10"
            android:hint="请输入验证码" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_lost_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_lost_password_2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button_visiable"
        android:text="下一步"
        android:textColor="@color/main_white"
        android:textSize="17sp" />

</RelativeLayout>