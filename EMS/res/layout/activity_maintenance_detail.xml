<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_toolbar" />

    <include layout="@layout/layout_task_menu" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="16dp" >

        <LinearLayout
            android:id="@+id/rl_elevator_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址："
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_elevator_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="梯号："
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fault_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障来源："
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_repair_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修内容："
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_arrow_right" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_close_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="关人"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_component_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配件列表"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>