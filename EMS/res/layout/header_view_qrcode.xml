<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_list_headview"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:background="@color/bg_title_blue" >

    <ImageView
        android:id="@+id/iv_headBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_common_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_tasklist_title"
        style="@style/tv_title_white_style"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/iv_common_qrcode"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_common_qrcode"
        android:visibility="gone" />

</RelativeLayout>