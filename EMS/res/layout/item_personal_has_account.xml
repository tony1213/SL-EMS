<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_personal_village_name"
        style="@style/tv_list_primary_style"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="名称" />

    <TextView
        android:id="@+id/tv_personal_maintenance_time"
        style="@style/tv_list_primary_style"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_personal_village_name"
        android:text="维保时间" />

    <TextView
        android:id="@+id/tv_personal_taskno"
        style="@style/tv_info_secondary_style"
        android:layout_alignLeft="@+id/tv_personal_village_name"
        android:layout_below="@+id/tv_personal_village_name"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:text="维保单号" />

    <TextView
        android:id="@+id/tv_personal_closingdate"
        style="@style/tv_info_secondary_style"
        android:layout_alignBaseline="@id/tv_personal_village_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="2016-09-09" />

    <TextView
        android:id="@+id/tv_personal_account"
        style="@style/tv_info_red_style"
        android:layout_alignBaseline="@id/tv_personal_taskno"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_personal_closingdate"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="维保金额" />

    <!--
         <TextView
        android:id="@+id/tv_personal_maintenance_endtime"
        style="@style/tv_info_secondary_style"
        android:layout_alignBaseline="@+id/tv_personal_account"
        android:layout_alignBottom="@+id/tv_personal_account"
        android:layout_alignRight="@+id/tv_personal_maintenance_time"
        android:text="结算时间"/>
            -->

</RelativeLayout>