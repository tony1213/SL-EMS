<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/headview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:overScrollMode="always" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/tv_register_person_info"
                style="@style/tv_info_secondary_style"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="填写个人基本信息" />

            <RelativeLayout
                android:id="@+id/rl_register_add_info"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_register_person_info"
                android:background="@color/main_white" >

                <com.overtech.ems.widget.EditTextWithDelete
                    android:id="@+id/et_register_add_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_input"
                    android:hint="姓名" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_register_add_info_2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_register_add_info"
                android:layout_marginTop="1px"
                android:background="@color/main_white" >

                <com.overtech.ems.widget.EditTextWithDelete
                    android:id="@+id/et_register_add_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:background="@drawable/shape_input"
                    android:hint="身份证号码" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_register_add_info_3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_register_add_info_2"
                android:layout_marginTop="1px"
                android:background="@color/main_white" >

                <com.overtech.ems.widget.EditTextWithDelete
                    android:id="@+id/et_register_add_workno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:background="@drawable/shape_input"
                    android:hint="上岗证编号" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_register_add_info_4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_register_add_info_3"
                android:layout_marginTop="-1dp"
                android:background="@color/main_white" >

                <Spinner
                    android:id="@+id/sp_add_city"
                    style="@style/spinner_style"
                    android:entries="@array/city" >
                </Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_register_add_info_5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_register_add_info_4"
                android:background="@color/main_white" >

                <Spinner
                    android:id="@+id/sp_add_zone"
                    style="@style/spinner_style"
                    android:entries="@array/sh_zone" >
                </Spinner>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_next_fragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rl_register_add_info_5"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_button_visiable"
                android:text="下一步"
                android:textColor="@color/main_white"
                android:textSize="17sp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>