<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_toolbar2" />

    <ListView
        android:id="@+id/grab_task_package_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_grab_task_package"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_grab_task_package"
        style="@style/btn_title_white_style"
        android:layout_marginBottom="15dp"
        android:background="@drawable/selector_button_normal"
        android:text="抢单(￥600元)" />

</LinearLayout>