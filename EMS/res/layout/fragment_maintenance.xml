<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_view_qrcode" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_maintenance_none"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/horizontal_line"
            android:text="未完成"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
		<View 
		    android:layout_width="1px"
		    android:layout_height="match_parent"
		    android:background="@color/bg_main"
		    />
        <Button
            android:id="@+id/bt_maintenance_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
            android:text="已完成"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="15sp" />
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="?android:attr/listDivider"
	    />
    <FrameLayout
        android:id="@+id/fl_maintenance_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>