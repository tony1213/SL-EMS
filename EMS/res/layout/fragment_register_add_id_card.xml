<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/register_send_idcard1"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_main"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="手持身份证照片（正面）" />

            <ImageView
                android:id="@+id/iv_idcard_front"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/btn_camera_comment_rest" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/register_send_idcard2"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_main"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="手持身份证照片（反面）" />

            <ImageView
                android:id="@+id/iv_idcard_opposite"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/btn_camera_comment_rest" />

            <Button
                android:id="@+id/btn_next_fragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/selector_button_normal"
                android:text="下一步"
                android:textColor="@color/main_white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>