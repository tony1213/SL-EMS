<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include        android:id="@+id/task_details_title"
        layout="@layout/headview" />

    <TextView
        android:id="@+id/tv_task_detail_title"
        style="@style/tv_list_secondary_style"
        android:layout_below="@+id/task_details_title"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:visibility="gone"
        android:text="维保项目（内容）和要求" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/lv_task_details"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divider_color" />

    <ListView
        android:id="@+id/lv_task_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_task_detail_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scrollbars="none" />

</RelativeLayout>