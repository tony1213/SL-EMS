<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_bonus_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="奖励日期：1970-01-01" />

    <TextView
        android:id="@+id/tv_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="奖励金额" />
    <TextView
        android:id="@+id/tv_bonus_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_bonus_remark"
        android:layout_alignBottom="@+id/tv_bonus_remark"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="￥1"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/tv_bonus_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bonus_date"
        android:layout_alignLeft="@+id/tv_bonus_date"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/main_secondary"
        android:text="很好" />

</RelativeLayout>