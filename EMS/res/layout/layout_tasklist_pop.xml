<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/title_function_bg" >

    <LinearLayout
        android:id="@+id/ll_pop_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/icon_common_map2" />

        <TextView
            android:id="@+id/textView1"
            style="@style/tv_list_secondary_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地图导航" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_pop_1"
        android:background="@color/divider_color" />

    <LinearLayout
        android:id="@+id/ll_pop_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pop_1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/icon_common_phone_green" />

        <TextView
            style="@style/tv_list_secondary_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拨打搭档电话" />
    </LinearLayout>

</RelativeLayout>