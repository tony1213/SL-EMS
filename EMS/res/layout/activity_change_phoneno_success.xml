<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main" >

    <include
        android:id="@+id/include_phone_change"
        layout="@layout/headview" />

    <RelativeLayout
        android:id="@+id/rl_change_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/include_phone_change" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/verify_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证手机号"
                android:textColor="#757575" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_arrow_right" />

            <TextView
                android:id="@+id/verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入验证码"
                android:textColor="#757575" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_arrow_right" />

            <TextView
                android:id="@+id/complication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换成功"
                android:textColor="@color/btn_visiable_bg" />
        </LinearLayout>
    </RelativeLayout>

     <ImageView
        android:id="@+id/iv_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_change_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@drawable/icon_successful" />

    <TextView
        android:id="@+id/textView1"
        style="@style/tv_list_primary_style"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_reset_password"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="恭喜您，手机号更新成功！" />

</RelativeLayout>