<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main" >

    <LinearLayout
        android:id="@+id/ll_task_list_title_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_task_list_title_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_button_left"
            android:text="未完成"
            android:textSize="@dimen/text_size_list" />

        <Button
            android:id="@+id/btn_task_list_title_donet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_button_right"
            android:text="已完成"
            android:textColor="@color/main_white"
            android:textSize="@dimen/text_size_list" />
    </LinearLayout>
	
    <FrameLayout 
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_task_list_title_content"
        ></FrameLayout>
    

</RelativeLayout>